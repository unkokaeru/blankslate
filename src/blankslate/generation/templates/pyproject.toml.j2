[tool.poetry]
name = "{{ project_name }}"
version = "0.0.1"
description = "{{ project_description }}"
authors = ["{{ project_author_shorthand }} <{{ project_author_email }}>"]
license = "MIT"
readme = "README.md"
include = [
    "LICENSE",
]

[tool.poetry.dependencies]
python = "^3.12"
Jinja2 = "^3.1.3"

[tool.poetry.dev-dependencies]
black = "^23.3.0"
mypy = "^1.2.0"
ruff = "^0.0.262"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
